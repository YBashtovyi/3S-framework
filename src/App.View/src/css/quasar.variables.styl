gradient(opacity)
  background: rgb(1,120,188);
  background: -moz-linear-gradient(90deg, rgba(1,120,188,opacity) 0%, rgba(49,143,148,opacity) 51%, rgba(94,197,140,opacity) 100%);
  background: -webkit-linear-gradient(90deg, rgba(1,120,188,opacity) 0%, rgba(49,143,148,opacity) 51%, rgba(94,197,140,opacity) 100%);
  background: linear-gradient(90deg, rgba(1,120,188,opacity) 0%, rgba(49,143,148,opacity) 51%, rgba(94,197,140,opacity) 100%);

gradient-bottom(opacity)
  background: rgb(1,120,188);
  background: -moz-linear-gradient(0deg, rgba(94,197,140,opacity) 0%, rgba(49,143,148,opacity) 51%,  rgba(1,120,188,opacity) 100%);
  background: -webkit-linear-gradient(0deg, rgba(94,197,140,opacity) 0%, rgba(49,143,148,opacity) 51%,  rgba(1,120,188,opacity) 100%);
  background: linear-gradient(0deg, rgba(94,197,140,opacity) 0%, rgba(49,143,148,opacity) 51%,  rgba(1,120,188,opacity) 100%);

gradient-diagonal(opacity)
  background: rgb(1,120,188);
  background: -moz-linear-gradient(230deg, rgba(94,197,140,opacity) 0%, rgba(49,143,148,opacity) 51%,  rgba(1,120,188,opacity) 100%);
  background: -webkit-linear-gradient(230deg, rgba(94,197,140,opacity) 0%, rgba(49,143,148,opacity) 51%,  rgba(1,120,188,opacity) 100%);
  background: linear-gradient(230deg, rgba(94,197,140,opacity) 0%, rgba(49,143,148,opacity) 51%,  rgba(1,120,188,opacity) 100%);

gradient-green(opacity)
